<tr>
  <% if @tbl_show_group_1_headers %>
    <td></td>
  <% end %>

  <% if @tbl_show_group_1_totals %>
    <th colspan="<%= @composition.metrics.size %>" scope="colgroup">TOTAL</th>
  <% end %>

  <% @expand_group_2_member_descriptors.each do |group_2_member_descriptor| %>
    <th
      colspan="<%= @composition.metrics.size %>"
      data-member-descriptor="<%= group_2_member_descriptor %>"
      data-member-exhibition="<%= @composition.results.group_member_exhibition(@composition.groups[1], group_2_member_descriptor) %>"
      data-member-label="<%= member_label(@composition, @composition.groups[1], group_2_member_descriptor) %>">

      <%= member_label(@composition, @composition.groups[1], group_2_member_descriptor) %>
    </th>
  <% end %>
</tr>
